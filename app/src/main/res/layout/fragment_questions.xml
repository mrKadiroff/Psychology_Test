<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.QuestionsFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="36dp"
            android:layout_height="36sp"
            android:background="@drawable/ellipse"
            android:layout_margin="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/nazad">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/nazad"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>




        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="0dp"
            android:layout_height="12sp"
            android:theme="@style/ProgressBarStyle"
            android:progressDrawable="@drawable/blueprogress"
            android:layout_weight="1"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toEndOf="@id/nazad"
            android:layout_marginEnd="12dp"
            android:minHeight="20dp"
            app:layout_constraintTop_toTopOf="@id/nazad"
            app:layout_constraintBottom_toBottomOf="@id/nazad"
            style="?android:progressBarStyleHorizontal"/>






        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:id="@+id/savolBg"
            android:layout_height="220dp"
            app:layout_constraintTop_toBottomOf="@id/nazad"
            android:layout_marginTop="13dp"
            android:background="@drawable/rectanglee"
            android:layout_marginHorizontal="18dp">

            <TextView
                android:id="@+id/tvQuestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ishdan uyga kelganingizda oâ€™zingizni yaxshi his qilasizmi? "
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:paddingHorizontal="15sp"/>


        </androidx.constraintlayout.widget.ConstraintLayout>




        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_marginHorizontal="12dp"
            android:id="@+id/backgrounddd"
            android:layout_marginTop="20sp"
            android:background="@drawable/new1"

            app:layout_constraintTop_toBottomOf="@id/savolBg"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/titlee"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                app:layout_constraintTop_toTopOf="parent"
                android:text="Erkaklar uchundssssssssssssssssssssssssssssssssssdddddddddddddddsdddddddddd"
                android:padding="15sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/check"
                android:layout_marginStart="10dp"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageView
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:src="@drawable/ic_baseline_check_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="24dp"
                android:id="@+id/check"
               app:layout_constraintTop_toTopOf="parent"
                android:visibility="invisible"
                android:layout_marginBottom="16dp"
               />

        </androidx.constraintlayout.widget.ConstraintLayout>




        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:id="@+id/backgrounddd2"
            android:layout_marginBottom="2dp"
            android:scaleY="1.08"
            android:layout_marginHorizontal="12dp"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="10.24dp"
            android:background="@drawable/new2"
            app:layout_constraintTop_toBottomOf="@id/backgrounddd"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/titlee2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_marginStart="20dp"
                app:layout_constraintTop_toTopOf="parent"
                android:text="Erkaklar uchundssssssssssssssssssssssssssssssssssdddddddddddddddsdddddddddd"
                android:padding="15sp"
                android:layout_marginTop="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/check2"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageView
                android:layout_width="40sp"
                android:layout_height="30sp"
                android:src="@drawable/ic_baseline_check_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="19dp"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/check2"
                android:layout_marginBottom="14dp"
                android:visibility="invisible"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>




        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:id="@+id/backgrounddd3"
            android:layout_marginBottom="2dp"
            android:scaleY="1.04"
            android:layout_marginHorizontal="12dp"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="11.249dp"
            android:background="@drawable/new3"
            app:layout_constraintTop_toBottomOf="@id/backgrounddd2"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/titlee3"
                android:layout_width="0dp"
                app:layout_constraintEnd_toStartOf="@id/check3"
                android:layout_height="wrap_content"

                android:layout_marginStart="20dp"
                app:layout_constraintTop_toTopOf="parent"
                android:text="Erkaklar uchundssssssssssssssssssssssssssssssssssdddddddddddddddsdddddddddd"
                android:padding="15sp"
                android:layout_marginTop="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageView
                android:layout_width="40sp"
                android:layout_height="30sp"
                android:src="@drawable/ic_baseline_check_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="12dp"
                android:id="@+id/check3"
                app:layout_constraintTop_toTopOf="parent"
                android:visibility="invisible"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>




        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="12dp"
            app:layout_constraintTop_toBottomOf="@id/backgrounddd3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/ripple"
            android:layout_marginTop="20dp"
            android:id="@+id/start">


            <ImageView
                android:layout_width="46sp"
                android:layout_height="35dp"
                android:src="@drawable/ic_baseline_arrow_forward_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.96"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Keyingi savol"
                android:textSize="20sp"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>



        <TextView
            android:id="@+id/txt_play_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/start" />


        <TextView
            android:id="@+id/txt_play_score2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/txt_play_score"
            app:layout_constraintTop_toBottomOf="@+id/start" />






    </androidx.constraintlayout.widget.ConstraintLayout>












</androidx.core.widget.NestedScrollView>