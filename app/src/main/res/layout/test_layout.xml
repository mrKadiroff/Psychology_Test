<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/karta"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:cardCornerRadius="12dp"
        android:layout_marginHorizontal="16sp"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:background="@drawable/background"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="0dp"
                android:maxLines="3"
                android:ellipsize="end"
                android:paddingHorizontal="12dp"
                android:layout_height="wrap_content"
                android:text="O'zingizga bo'lgan ishonchingiz qay darajada?"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@id/quantity"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/heading"/>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/vaqt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/time_bg"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent="0.18"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.15000002"
                android:layout_marginEnd="12dp"
                app:layout_constraintWidth_percent="0.25">


                <TextView
                    android:id="@+id/daqiqa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 daqiqa"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="5dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>





            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/time_bg"
                app:layout_constraintBottom_toBottomOf="@id/vaqt"
               app:layout_constraintEnd_toStartOf="@id/vaqt"
                app:layout_constraintHeight_percent="0.18"
                app:layout_constraintTop_toTopOf="@id/vaqt"
                android:layout_marginEnd="12dp"
                app:layout_constraintWidth_percent="0.25">


                <ImageView
                    android:id="@+id/soroq"
                    android:layout_width="24sp"
                    android:layout_height="20sp"
                    android:layout_marginVertical="8dp"
                    android:layout_marginHorizontal="6dp"
                    android:src="@drawable/question"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="16"
                    android:layout_marginEnd="5dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="8dp"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toEndOf="@id/soroq"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:id="@+id/raqami"/>


            </androidx.constraintlayout.widget.ConstraintLayout>




        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>


    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"
        app:layout_constraintTop_toBottomOf="@id/karta"/>




</androidx.constraintlayout.widget.ConstraintLayout>